/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */

class Solution {
public:
// ab me array lunga simple sa 
vector<int> arr;
    Solution(ListNode* head) {
        // ab array mme sare num daal dung a
        ListNode* temp = head;
        
        while(temp != NULL){
        //array me push k(temparta rahunga number 
        arr.push_back(temp->val);
        temp = temp->next;

    }
    }
    int getRandom() {
       int n = arr.size();
       int random_index = rand()%n;// 0,1.........n-1

       return arr[random_index];
    }
};

